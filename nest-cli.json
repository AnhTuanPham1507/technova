{
    "language": "ts",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "plugins": [
            "@nestjs/swagger/plugin"
        ],
        "assets": [
            "modules/mail/templates/**/*",
            {
                "include": "i18n/*.json",
                "outDir": "dist/src"
            }
        ],
        "watchAssets": true 
    }
}
